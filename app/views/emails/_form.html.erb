
<%= simple_form_for(@email) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-md-6 form-group mb-3">
        <label for="name">Name</label>
        <%= f.input :name, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Name" } %>
    </div>

    <div class="col-md-6 form-group mb-3">
        <label for="name">Email</label>
        <%= f.input :email, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email" } %>
    </div>


    <%= f.input :company_id, as: :hidden, input_html: { value: current_user.client_id } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.input :status, as: :hidden, input_html: { value: "1" } %>
  

    <div class="col-md-12">
      <%= f.button :submit, "Save", class: "btn btn-primary" %>
      <%= link_to 'Back', emails_path, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>





