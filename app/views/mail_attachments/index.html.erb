<p id="notice"><%= notice %></p>

<h1>Listing Mail Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Request code</th>
      <th>Attachment name</th>
      <th>Attachment path</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_attachments.each do |mail_attachment| %>
      <tr>
        <td><%= mail_attachment.request_code %></td>
        <td><%= mail_attachment.attachment_name %></td>
        <td><%= mail_attachment.attachment_path %></td>
        <td><%= mail_attachment.status %></td>
        <td><%= link_to 'Show', mail_attachment %></td>
        <td><%= link_to 'Edit', edit_mail_attachment_path(mail_attachment) %></td>
        <td><%= link_to 'Destroy', mail_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

