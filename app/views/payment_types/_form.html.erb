
<%= simple_form_for(@payment_type) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


    <div class="row">
      <div class="col-md-6 form-group mb-3">
          <label for="name">Name</label>
          <%= f.input :name, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Name" } %>
      </div>
      
      
      <div class="col-md-6 form-group mb-3">
          <label for="description">Number of Users</label>
          <%= f.input :users, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Description" } %>
      </div>
      
      
      <div class="col-md-6 form-group mb-3">
          <label for="price">Number of Emails</label>
          <%= f.input :email_count, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Description" } %>
      </div>
      
      
      <div class="col-md-6 form-group mb-3">
          <label for="price">Number of Email Books</label>
          <%= f.input :email_book, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Description" } %>
      </div>
      
      
      <div class="col-md-6 form-group mb-3">
          <label for="price">Number of Email Templates</label>
          <%= f.input :email_templates, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Description" } %>
      </div>
      
      
      <div class="col-md-6 form-group mb-3">
          <label for="price">Number of Sender Emails</label>
          <%= f.input :sender_email, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Description" } %>
      </div>

      
      <div class="col-md-12">
        <%= f.button :submit, "Save", class: "btn btn-primary" %>
        <%= link_to 'Back', payment_types_path, class: "btn btn-danger" %>
      </div>
  </div>


<% end %>
