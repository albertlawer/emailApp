<%= simple_form_for(@sender_email) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-md-6 form-group mb-3">
        <label for="name">Name</label>
        <%= f.input :name, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Name" } %>
    </div>

    <div class="col-md-6 form-group mb-3">
        <label for="name">Email Username</label>
        <%= f.input :email_username, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email Username" } %>
    </div>


    <div class="col-md-6 form-group mb-3">
        <label for="name">Email Password</label>
        <%= f.input :email_password, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email Password" } %>
    </div>


    <div class="col-md-6 form-group mb-3">
        <label for="name">Server Address</label>
        <%= f.input :email_address, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email Address" } %>
    </div>


    <div class="col-md-6 form-group mb-3">
        <label for="name">Email Port</label>
        <%= f.input :email_port, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email Address" } %>
    </div>


    <div class="col-md-6 form-group mb-3">
        <label for="name">Authentication Type</label>
        <%= f.input :authentication, collection: @auth, label_method: :first, value_method: :last, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email Address" } %>
    </div>




    <%= f.input :company_id, as: :hidden, input_html: { value: current_user.client_id } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <%= f.input :status, as: :hidden, input_html: { value: "1" } %>
  

    <div class="col-md-12">
      <%= f.button :submit, "Save", class: "btn btn-primary" %>
      <%= link_to 'Back', sender_emails_path, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>

