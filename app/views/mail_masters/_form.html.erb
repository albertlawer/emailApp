
<%= simple_form_for(@mail_master) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :request_code %>
    <%= f.input :email_type %>
    <%= f.input :subject %>
    <%= f.input :body_template_id %>
    <%= f.input :schedule_time %>
    <%= f.input :email_group %>
    <%= f.input :sender_email_id %>
    <%= f.input :company_id %>
    <%= f.input :user_id %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
