











    <!-- ============ Body content start ============= -->
    <div class="main-content">
        <div class="breadcrumb">
            <h1>User Information</h1>
            <ul>
                <li>Edit Profile</li>
            </ul>
        </div>
        <div class="separator-breadcrumb border-top"></div>
        <!-- end of row-->
        <div class="row">
          <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-title mb-3">Edit Profile</strong></div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
              
                <div class="row">
                  <div class="col-md-6 form-group mb-3">
                      <label for="first_name">First Name</label>
                      <%= f.input :first_name, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter First Name" } %>
                  </div>
                  
                  
                  <div class="col-md-6 form-group mb-3">
                      <label for="last_name">Surname</label>
                      <%= f.input :last_name, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Surname" } %>
                  </div>
                  
                  <div class="col-md-6 form-group mb-3">
                      <label for="email">Email</label>
                      <%= f.input :email, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Email" } %>
                  </div>

                  
                  <div class="col-md-6 form-group mb-3">
                      <label for="username">Username</label>
                      <%= f.input :username, label: false, input_html: { class: "form-control form-control-rounded", placeholder: "Enter Username" } %>
                  </div>
                  
                 
                  <div class="col-md-6 form-group mb-3">
                      <label for="password">Password</label>
                      <%= f.input :password, required: false, hint: "leave it blank if you don't want to change it", label: false, input_html: { class: "form-control form-control-rounded", autocomplete: "new-password" } %>
                  </div>
                  
                  
                  <div class="col-md-6 form-group mb-3">
                      <label for="password_confirmation">Confirm Password</label>
                      <%= f.input :password_confirmation, required: false, label: false, input_html: { class: "form-control form-control-rounded", autocomplete: "new-password" } %>
                  </div>
                  
                  
                  <div class="col-md-6 form-group mb-3">
                      <label for="password_confirmation">Current Password</label>
                      <%= f.input :current_password, required: true, hint: "we need your current password to confirm your changes", label: false, input_html: { class: "form-control form-control-rounded", autocomplete: "current-password" } %>
                  </div>
                  
                            
                
                  <div class="col-md-12">
                    <%= f.button :submit, "Save", class: "btn btn-primary" %>
                    <%= link_to 'Cancel', root_path, class: "btn btn-danger" %>
                  </div>
              </div>
            <% end %>
            
                    </div>
                </div>
            </div>
        </div>
    </div>
    
