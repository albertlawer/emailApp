



<div class="auth-content">
    <div class="card o-hidden">
        <div class="row">
            <div class="col-md-6">
                <div class="p-4">
                    <div class="auth-logo text-center mb-4"><%= image_tag("logo_new.png")%></div>
                    <h1 class="mb-3 text-18">Sign In</h1>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                            <label for="email">Username</label>
                            <%= f.input :username, label: false, required: false, autofocus: true, input_html: { autocomplete: "username", class: "form-control form-control-rounded" } %>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <%= f.input :password, label: false, required: false, input_html: { autocomplete: "current-password", class: "form-control form-control-rounded" } %>
                        </div>
                        <%= f.button :submit, "Sign In", class: "btn btn-rounded btn-primary btn-block mt-2" %>
                    <% end %>
                    <div class="mt-3 text-center">
                    	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    		<%= link_to "<u>Forgot Password?</u>".html_safe, new_password_path(resource_name), class: "text-muted" %>
                    	<% end %>
                    	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                    		<%= link_to "<u>Didn't receive confirmation instructions?</u>".html_safe, new_confirmation_path(resource_name), class: "text-muted" %>
                    	<% end %>
						<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
                    		<%= link_to "<u>Didn't receive unlock instructions?</u>".html_safe, new_unlock_path(resource_name), class: "text-muted" %>         
                    	<% end %>           	
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center" style="background-size: cover;background-image: url(<%= image_path("photo-long-2.jpg")%>)">
                <div class="pr-3 auth-right">
                	<a class="btn btn-rounded btn-block btn-icon-text btn-outline-facebook" href="https://www.facebook.com/directsnl" target="_blank"><i class="i-Facebook-2"></i> Visit Facebook Page</a>
                </div>
            </div>
        </div>
    </div>
</div>







