

            <!-- ============ Body content start ============= -->
            <div class="main-content">
                <div class="breadcrumb">
                    <h1>Roles Information</h1>
                    <ul>
                        <li>Roles List</li>
                    </ul>
                </div>
                <div class="separator-breadcrumb border-top"></div>
                <!-- end of row-->
                <div class="row mb-4">
                    <div class="col-md-12 mb-4">
                        <div class="card text-left">
                            <div class="card-body">
                                <h4 class="card-title mb-3">Roles List</h4>
                                
                                <%= link_to 'New Role', new_role_path, class: "btn btn-primary btn-sm ripple m-1" %>
                                
                                <div class="table-responsive">
                                    <table class="display table table-striped table-bordered" id="zero_configuration_table" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Role</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% @roles.each do |role| %>
                                              <tr>
                                                <td><%= role.name %></td>
                                                <td>
                                                  <%= link_to 'Show', role, class: "btn btn-success btn-rounded m-1" %>
                                                  <%= link_to 'Edit', edit_role_path(role), class: "btn btn-warning btn-rounded m-1" %>
                                                </td>
                                              </tr>
                                            <% end %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Role</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end of row-->
                <!-- end of main-content -->
            </div>