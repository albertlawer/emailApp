
        <div class="main-header">
            <div class="logo">
            	<%= image_tag("logo_new.png") %>
            </div>
            <div class="menu-toggle">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <div style="margin: auto"></div>
            <div class="header-part-right">
